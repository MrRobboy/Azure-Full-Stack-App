<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <!-- Handle OPTIONS request at the server level -->
        <handlers>
            <remove name="OPTIONSVerbHandler" />
            <add name="OPTIONSVerbHandler" path="*" verb="OPTIONS" modules="ProtocolSupportModule" resourceType="Unspecified" requireAccess="None" />
        </handlers>
        
        <!-- Global headers for all responses -->
        <httpProtocol>
            <customHeaders>
                <remove name="X-Powered-By" />
                <clear />
                <add name="Access-Control-Allow-Origin" value="https://app-frontend-esgi-app.azurewebsites.net" />
                <add name="Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS" />
                <add name="Access-Control-Allow-Headers" value="Origin, X-Requested-With, Content-Type, Accept, Authorization" />
                <add name="Access-Control-Allow-Credentials" value="true" />
                <add name="Access-Control-Max-Age" value="86400" />
            </customHeaders>
        </httpProtocol>
        
        <!-- URL Rewrite rules -->
        <rewrite>
            <rules>
                <!-- Special handling for OPTIONS requests -->
                <rule name="Options Method" stopProcessing="true">
                    <match url=".*" />
                    <conditions>
                        <add input="{REQUEST_METHOD}" pattern="^OPTIONS$" />
                    </conditions>
                    <action type="CustomResponse" statusCode="200" statusReason="OK" 
                            statusDescription="Options request allowed" />
                </rule>
                
                <!-- Explicitly handle direct PHP scripts first -->
                <rule name="Direct PHP Scripts" stopProcessing="true">
                    <match url="^(status|info|azure-cors|test-cors|server-diagnostics|api-test|test-sqlserver)\.php(.*)$" />
                    <action type="Rewrite" url="{R:1}.php{R:2}" appendQueryString="true" />
                </rule>
                
                <!-- Status API -->
                <rule name="Status API" stopProcessing="true">
                    <match url="^api/status$" />
                    <action type="Rewrite" url="status.php" />
                </rule>
                
                <rule name="Database Status API" stopProcessing="true">
                    <match url="^api/db-status$" />
                    <action type="Rewrite" url="status.php?type=db" />
                </rule>
                
                <!-- All other API routes go to index.php -->
                <rule name="API Index Router" stopProcessing="true">
                    <match url="^api/(.*)$" />
                    <action type="Rewrite" url="index.php" appendQueryString="true" />
                </rule>
                
                <!-- Legacy API Router as fallback -->
                <rule name="Legacy API Router" stopProcessing="false">
                    <match url="^api/(.*)$" />
                    <action type="Rewrite" url="routes/api.php?resource={R:1}" appendQueryString="true" />
                </rule>
                
                <!-- Default to index.php for unmatched requests -->
                <rule name="Default Handler" stopProcessing="true">
                    <match url="^(?!.*\.(js|css|jpg|jpeg|png|gif|ico|html|php))(.*)$" />
                    <action type="Rewrite" url="index.php" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration> 