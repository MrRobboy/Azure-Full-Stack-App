<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <!-- Handle OPTIONS request at the server level -->
        <handlers>
            <remove name="OPTIONSVerbHandler" />
            <add name="OPTIONSVerbHandler" path="*" verb="OPTIONS" modules="ProtocolSupportModule" resourceType="Unspecified" requireAccess="None" />
        </handlers>
        
        <!-- Global headers for all responses -->
        <httpProtocol>
            <customHeaders>
                <remove name="X-Powered-By" />
                <add name="Access-Control-Allow-Origin" value="https://app-frontend-esgi-app.azurewebsites.net" />
                <add name="Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS" />
                <add name="Access-Control-Allow-Headers" value="Origin, X-Requested-With, Content-Type, Accept, Authorization" />
                <add name="Access-Control-Allow-Credentials" value="true" />
            </customHeaders>
        </httpProtocol>
        
        <!-- URL Rewrite rules -->
        <rewrite>
            <rules>
                <!-- Special handling for OPTIONS requests -->
                <rule name="Options Method" stopProcessing="true">
                    <match url=".*" />
                    <conditions>
                        <add input="{REQUEST_METHOD}" pattern="^OPTIONS$" />
                    </conditions>
                    <action type="CustomResponse" statusCode="200" statusReason="OK" 
                            statusDescription="Options request allowed" />
                </rule>
                
                <!-- API routes -->
                <rule name="Status API" stopProcessing="true">
                    <match url="^api/status$" />
                    <action type="Rewrite" url="status.php" />
                </rule>
                
                <rule name="Database Status API" stopProcessing="true">
                    <match url="^api/db-status$" />
                    <action type="Rewrite" url="status.php?type=db" />
                </rule>
                
                <rule name="API Router" stopProcessing="true">
                    <match url="^api/(.*)$" />
                    <action type="Rewrite" url="routes/api.php?resource={R:1}" appendQueryString="true" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration> 