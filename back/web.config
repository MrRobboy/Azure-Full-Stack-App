<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <rewrite>
            <rules>
                <!-- Règle pour gérer les requêtes OPTIONS (CORS preflight) -->
                <rule name="OptionsHandler" stopProcessing="true">
                    <match url=".*" />
                    <conditions>
                        <add input="{REQUEST_METHOD}" pattern="^OPTIONS$" />
                    </conditions>
                    <action type="CustomResponse" statusCode="200" />
                </rule>
                
                <!-- Status endpoints -->
                <rule name="StatusEndpoint" stopProcessing="true">
                    <match url="^api/status$" />
                    <action type="Rewrite" url="status.php" />
                </rule>
                <rule name="DbStatusEndpoint" stopProcessing="true">
                    <match url="^api/db-status$" />
                    <action type="Rewrite" url="status.php?type=db" />
                </rule>
                
                <!-- API routes -->
                <rule name="API Routes" stopProcessing="true">
                    <match url="^api/([a-zA-Z]+)(/.*)?$" />
                    <conditions>
                        <!-- Exclure les règles spécifiques déjà traitées -->
                        <add input="{REQUEST_URI}" pattern="^/api/status$" negate="true" />
                        <add input="{REQUEST_URI}" pattern="^/api/db-status$" negate="true" />
                    </conditions>
                    <action type="Rewrite" url="routes/api.php?resource={R:1}&amp;path={R:2}" appendQueryString="true" />
                </rule>
            </rules>
        </rewrite>
        
        <!-- Handle CORS headers for Azure App Service -->
        <httpProtocol>
            <customHeaders>
                <add name="Access-Control-Allow-Origin" value="https://app-frontend-esgi-app.azurewebsites.net" />
                <add name="Access-Control-Allow-Methods" value="GET,POST,PUT,DELETE,OPTIONS" />
                <add name="Access-Control-Allow-Headers" value="Content-Type,Authorization,X-Requested-With" />
                <add name="Access-Control-Allow-Credentials" value="true" />
            </customHeaders>
        </httpProtocol>
        
        <!-- Activation de la stratégie de cache -->
        <staticContent>
            <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="1.00:00:00" />
        </staticContent>
    </system.webServer>
</configuration> 