<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <!-- Global CORS Rules -->
        <httpProtocol>
            <customHeaders>
                <clear />
                <add name="Access-Control-Allow-Origin" value="https://app-frontend-esgi-app.azurewebsites.net" />
                <add name="Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS" />
                <add name="Access-Control-Allow-Headers" value="Content-Type, Authorization, X-Requested-With" />
                <add name="Access-Control-Allow-Credentials" value="true" />
                <add name="Access-Control-Max-Age" value="86400" />
            </customHeaders>
        </httpProtocol>

        <rewrite>
            <rules>
                <!-- Special rule for OPTIONS requests - respond directly with 200 OK -->
                <rule name="OptionsRule" stopProcessing="true">
                    <match url=".*" />
                    <conditions>
                        <add input="{REQUEST_METHOD}" pattern="OPTIONS" ignoreCase="true" />
                    </conditions>
                    <action type="CustomResponse" statusCode="200" statusReason="OK" statusDescription="OK" />
                </rule>

                <!-- Dedicated Azure CORS test endpoint -->
                <rule name="AzureCorsTest" stopProcessing="true">
                    <match url="^azure-cors\.php$" />
                    <action type="Rewrite" url="azure-cors.php" />
                </rule>

                <!-- Handle API endpoints -->
                <rule name="API Status" stopProcessing="true">
                    <match url="^api/status$" />
                    <action type="Rewrite" url="status.php" />
                </rule>
                <rule name="API DB Status" stopProcessing="true">
                    <match url="^api/db-status$" />
                    <action type="Rewrite" url="status.php?type=db" />
                </rule>
                <rule name="API Routes" stopProcessing="true">
                    <match url="^api/([a-zA-Z]+)(/.*)?$" />
                    <action type="Rewrite" url="routes/api.php?resource={R:1}&amp;path={R:2}" appendQueryString="true" />
                </rule>
            </rules>
        </rewrite>

        <!-- Only execute PHP files to avoid running our PHP code directly -->
        <handlers>
            <clear />
            <add name="PHP-FastCGI" 
                 path="*.php" 
                 verb="*" 
                 modules="FastCgiModule" 
                 scriptProcessor="D:\Program Files (x86)\PHP\v8.0\php-cgi.exe" 
                 resourceType="File" />
            <add name="StaticFile" 
                 path="*" 
                 verb="*" 
                 modules="StaticFileModule,DefaultDocumentModule,DirectoryListingModule" 
                 resourceType="Either" />
        </handlers>
    </system.webServer>
</configuration> 